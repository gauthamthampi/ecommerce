        <div class="col-2 bg-white border-end">
          <h4 class="text-center mt-2" style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">FILTER</h4>
          <form action="/womens" method="GET">
            <div class="mb-3">
              <label for="color" class="form-label">Color:</label>
              <select class="form-select" name="colour" id="color">
                <option value="" selected disabled>Select Colour</option>
                  <option value="Black">Black</option>
                  <option value="Blue">Blue</option>
                  <option value="Brown">Brown</option>
                  <option value="Silver">Silver</option>
                  <option value="Gold">Gold</option>
                  <option value="White">White</option>
              </select>
          </div>

          <div class="mb-3">
            <label for="color" class="form-label">Brand:</label>
            <select class="form-select" name="brand" id="brand">
              <option value="" selected disabled>Select Brand</option>
              <% brands.forEach((brand) => { %>
                <option value="<%= brand %>"><%= brand %></option>
                <% }) %>
                
            </select>
        </div>
          
          <div class="mb-3">
            <label for="dialShape" class="form-label">Dial Shape:</label>
            <select class="form-select" name="dialshape" id="dialShape">
                <option value="" selected disabled>Select Dial Shape</option>
                <option value="Round">Round</option>
                <option value="Square">Square</option>
                <option value="Square">Rectangle</option>
               
            </select>
        </div>
          <div class="mb-3">
              <label for="minPrice" class="form-label" >Min Price:</label>
              <input type="number" class="form-control" name="minPrice" min="1"  placeholder="Min Price">
          </div>
  
          <div class="mb-3">
              <label for="maxPrice" class="form-label">Max Price:</label>
              <input type="number" class="form-control" name="maxPrice" min="1" placeholder="Max Price">
          </div>
  
          <div class="mb-3">
              <label for="strapMaterial" class="form-label">Strap Material:</label>
              <select class="form-select" name="strapmaterial" id="strapMaterial">
                <option value="" selected disabled>Select Strap Material</option>  
                <option value="Leather">Leather</option>
                <option value="Stainless Steel">Stainless Steel</option>
                <option value="Silicone">Silicone</option>
                <option value="Ceramic">Ceramic</option>
                <option value="Rubber">Rubber</option>
                  
              </select>
          </div>
  
          <button type="submit" class="btn btn-primary">Apply Filters</button>
        </form>
        </div>
        <% if (product!="") { %>
            <% let allProductsHaveOffers = true; %>
            <% product.forEach((row) => { %>
              <% if (row.offerprice <= 0) { %>
                <% allProductsHaveOffers = false; %>
              <% } %>
            <% }) %>

        <div class="col-lg-10 bg-white p-5">
          <% if (allProductsHaveOffers) { %>
            <marquee direction="left" style="font-family: Arial, sans-serif;">AMAZING OFFERS FOR PRODUCTS IN WOMENS CATEGORY. GRAB YOUR FAVOURITES NOW!!</marquee>
          <% } %>
          <form class="search-form d-flex justify-content-end"  action="/womens" method="GET">
            <input type="search" class="form-control form-control-sm me-2" name="search" placeholder="Search..." aria-label="Search" style="width: min-content;">
            <button type="submit" class="btn btn-primary btn-sm">Search</button>
          </form>
          <div class="row">
            <% product.forEach((row) => { %>
              <div class="col mx-4 my-3">
                <div class="card card-zoom" style="width: 18rem;">
                  <img src="/uploads/<%= row.image[0] %>" class="card-img-top img-thumbnail" alt="...">
                  <div class="card-body d-flex flex-column justify-content-between position-relative" style="height: 200px;"> <!-- Set a fixed height for the card body -->
                    <div> <!-- Content at the top -->
                      <h5 class="card-title overflow-ellipsis"><%= row.modelname %></h5> <!-- Apply ellipsis to truncate the name -->
                      <p class="card-text fw-light">Colour: <%= row.colour %></p>
                      <% if (row.offerprice > 0) { %>
                        <div class="border-bottom"> <p>Price: <strike>₹<%= row.price %></strike>&nbsp;<strong><span style="color: green;">₹<%= row.offerprice%>(Offer price)</span></strong></p></div>
                      <% } else { %>
                        <div class="border-bottom"> <p>Price: ₹<%= row.price %></p></div>
                      <% } %>
                    </div>
                    <div class="text-start mt-2"> <!-- "Buy Now" button aligned at the bottom -->
                      <a href="/mens_prview/<%= row._id %>" class="btn btn-primary">Buy Now</a>
                    </div>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
          <nav aria-label="Page navigation example" class="float-end">
            <ul class="pagination">
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                        <a class="page-link" href="/womens?page=<%= i %>"><%= i %></a>
                    </li>
                <% } %>
            </ul>
        </nav>
        </div>
        <% } else {%>
        <div class="col-lg-10 bg-white p-5">
          <h1 class="text-center text-secondary mt-5">No data found in the database</h1>
