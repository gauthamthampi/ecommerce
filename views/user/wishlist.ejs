                  <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 75%"></div>
                </div> -->
               
                <% if (wishlist) { %>
                    <% products.forEach(product => { %>
                        <!-- Product Details -->
                        <div class="row row border rounded-3 mx-3 my-3 p-3" style="background-color: rgb(222, 222, 222);">
                            <!-- Image -->
        
                            <div class="col">
                                <div class="border rounded-3 p-2" style="width: 200px; height: 200px; object-fit: cover; margin-left: 100px; margin-top: 20px;">
                                    <img src="/uploads/<%= product.image[0] %>" width="100%" height="100%" class="img-fluid" alt="img">
                                </div>
                            </div>
                            <!-- Product Info -->
                            <div class="col">
                                <h4><%= product.modelname %></h4>
                                <% if (product.offerprice>0) { %>
                                  <h5 class="my-4" style="color: green;">₹ <%= Number(product.offerprice).toLocaleString('en-IN') %> </h5>
                                <% } else { %>
                                  <h5 class="my-4" style="color: green;">₹ <%= Number(product.price).toLocaleString('en-IN') %> </h5>
                                  <% } %>
                               
                                <h5 class="my-4">Colour: <%= product.colour %> </h5>
                                <div class="row">
                                    <div class="col-12">

                                        <% if (typeof session !== 'undefined' && typeof session.message !== 'undefined') { %>
                                            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                                 <%= session.message %>
                                                 <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                            </div>
                                            <% delete session.message; %>
                                           <% } %>
                                           <a href="/user/addtocart/<%= product._id %>" class="cart-add" data-product-id="<%= product._id %>">
                                            <button type="button" class="btn btn-success mt-3">Add to Cart</button>
                                          </a>

                                        <a href="#" class="delete-product" data-product-id="<%= product._id %>">
                                            <button type="button" class="btn btn-danger mt-3">Remove Product</button>
                                        </a>
                                    </div>
                                </div>
                            </div>  
                        </div>
                    <% }); %>
                <% } else { %>
