                <% if (locals.user) { %>
                    <p class="text-primary">Hello <span> <%= user %> </span></p>
                <% } %>
            </div>
        </header>
    </div>

    <% if (locals.message) { %>
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <%= message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    

    <div class="container mt-5 bg-white border rounded-3">
        <div class="d-flex justify-content-center mt-2" style="font-family: Georgia, 'Times New Roman', Times, serif;">
            <h1>SHOPPING BAG</h1>
        </div>
        <div class="progress" role="progressbar" aria-label="Animated striped example" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
          <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 75%"></div>
        </div>
        <div class="row row-cols-1 row-cols-md-2 my-5">
            <div class="col-md-6 mb-4" style="border-right: 1px solid grey;">
                <!-- product details -->
             <h2 style="font-family:Georgia, 'Times New Roman', Times, serif;">Product Details</h2>
            <div class="row row-cols-2 border rounded-3 mx-3 my-3" style="background-color: rgb(222, 222, 222);">
                <div class="col">
                  <div class="border rounded-3 p-2" style="width: 200px; height: 200px; object-fit: cover;">
                    <img src="/uploads/<%= product.image[0] %>" width="100%" height="100%" class="img-fluid">
                </div>
                
                </div>
                <div class="col">
                    <h4 ><%= product.modelname %></h4>
                    <h5 class="my-4" style="color: green;">₹<%= Number(product.price).toLocaleString('en-IN') %></h5>
                    <h5 class="my-4" >Colour:<%= product.colour %></h5>
                    <div class="row">
                      <div class="col-12">
                          <div class="input-group">
                              <span class="input-group-text">Quantity</span>
                              <form method="get" action="/mens/checkout/<%= product._id %>">
                              <input type="number" step="1" min="1" max="10" value="1" class="form-control" name="quantity" id="quantity" oninput="updateSubtotal(<%= JSON.stringify(Number(product.price)) %>)">
                             
                           
                          </div>
                      </div>
                  </div>

                  
                </div>
            </div>
            </div>
            <div class="col-md-6">
                <!-- summary details -->
                 <h2 style="font-family:Georgia, 'Times New Roman', Times, serif;">Summary</h2>
                 <div class="row m-4" style="border-bottom: 1px solid grey;">
                 <div class="col">
                    <h4>MRP</h4>
                </div>
                <div class="col" style="text-align: end;">
                  <h4>₹<%= Number(product.price).toLocaleString('en-IN') %>.00</h4>
              </div>
            </div>
            <div class="row m-4">
              <div class="col">
                  <h4>Subtotal</h4>
              </div>
              <div class="col" style="text-align: end;">
                <h4 id="subtotalAmount">₹<%= Number(product.price).toLocaleString('en-IN') %>.00</h4>
            </div>
          </div>
          <div class="row m-4" style="border-bottom: 1px solid grey;" >
            <div class="col">
                <h4>Shipping Charge</h4>
            </div>
            <div class="col" style="text-align: end;">
              <h4>₹0.00</h4>
          </div>
        </div>
        <div class="row m-4">
          <div class="col">
              <h4>Total Price</h4>
          </div>
          <div class="col" style="text-align: end;">
            <h4 id="totalPriceAmount">₹<%= Number(product.price).toLocaleString('en-IN') %>.00</h4>
        </div>
      </div>
      <div class="row m-4">
      
        <a href="/mens/checkout/<%= product._id %>"><button class="btn btn-primary" type="submit" style="width: 100%;">Proceed To Checkout</button></a>
      </form>
    </div>



        </div>
      </div>
    </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <!-- Bootstrap JS and your custom script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>

    function updateQuantity(productId, price) {
        var quantityField = $('#quantity');
        var newQuantity = quantityField.val();

        // Make an AJAX request to update the quantity
        $.ajax({
            url: `/mens/prod_cart/${productId}`,
            method: 'PUT', // Assuming you handle updates with a PUT request
            data: { quantity: newQuantity },
            success: function(response) {
                console.log('Quantity updated successfully:', response);
                // Optionally, update the subtotal and total price on the page
                updateSubtotalAndTotal(response.updatedPrice);
            },
            error: function(error) {
                console.error('Error updating quantity:', error);
            }
        });
    }

      // Update the progress bar value
    function updateProgressBar(value) {
    $('.progress').attr('aria-valuenow', value);
    $('.progress-bar').css('width', value + '%');
   }

    updateProgressBar(25);



      function updateSubtotal(price) {
        var quantityField = $('#quantity');
        var subtotal = price * parseInt(quantityField.val(), 10);

        // Update the displayed subtotal
        $('#subtotalAmount').text(subtotal.toLocaleString('en-IN') + '.00');

        // Update the total price in the summary
        var totalPrice = subtotal;
        $('#totalPriceAmount').text(totalPrice.toLocaleString('en-IN') + '.00');
    }
     
      function formatPrice(price) {
        // Convert the price to a number and use toLocaleString to add commas
        return Number(price).toLocaleString('en-IN');
    }

    
    
    </script>

</body>

</html>
